{
  "parserOptions": {
    "project": "/tsconfig.json"
  },
  "globals": {
    "React": true,
    "JSX": true
  },
  "env": {
    "node": true
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "project": "/tsconfig.json"
      },
      "node": {
        "extensions": [".mjs", ".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "ignorePatterns": ["node_modules/", "*.json"]
}
