{
  "extends": "./packages/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": { "@ibj/*": ["packages/*"] },
    "allowJs": true,
    "module": "ES6",
    "noEmit": false
