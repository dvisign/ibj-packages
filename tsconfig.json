{
  "extends": "@dvisign/ibj-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "module": "ES6",
    "noEmit": false,
  },
  "include": [".eslintrc.js", "**/*.tsx", "rollup.config.js"],
  "exclude": ["node_modules", "src/stories/**"],
  "ignorePattern": ["dist/*"]
}
