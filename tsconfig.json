{
  "extends": "./packages/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": { "@ibj/*": ["packages/*"] },
    "allowJs": true,
    "module": "CommonJS",
    "noEmit": false
  },
  "include": [
    ".eslintrc.js",
    "packages/eslint-config/**/*",
    "packages/typescript-config/**/*.json",
    "./**/*"
  ],
  "exclude": ["node_modules"]
}
