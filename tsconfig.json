{
  "extends": "./packages/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@ibj/*": ["packages/*"],
      "@ibj/components/*": ["packages/components/src/*"],
      "@ibj/eslint-config/*": ["packages/eslint-config/*"],
      "@lib/*": ["lib/*"]
    },
    "allowJs": true,
    "module": "ES6",
    "noEmit": false
  },
  "include": [".eslintrc.js", "packages/*", "packages/*/package.rollup.config.js", "rollup.config.mjs"],
  "exclude": ["node_modules"],
  "ignorePattern": ["dist/*"]
}
