{
  "extends": "./packages/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@ibj/*": ["packages/*"]
    },
    "allowImportingTsExtensions": false,
    "noEmit": false // JavaScript 파일 생성 허용
  },
  "include": [
    ".eslintrc.js",
    "packages/eslint-config/**/*",
    "packages/typescript-config/**/*",
    "./**/*"
  ],
  "exclude": ["node_modules"]
}